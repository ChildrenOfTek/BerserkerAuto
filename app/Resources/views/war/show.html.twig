{% extends 'base.html.twig' %}

{% block section %}
    <h1>War</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ war.id }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if war.dateDebut %}{{ war.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('war_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('war_edit', { 'id': war.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
